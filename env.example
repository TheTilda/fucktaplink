# Окружение
NODE_ENV=development
HOST=0.0.0.0
PORT=3000

# База данных MySQL
# Формат: mysql://user:password@host:port/database
DATABASE_URL=mysql://user:password@localhost:3306/fucktaplink

# Аутентификация и сессии
# Сгенерируйте случайный секрет: openssl rand -base64 32
SESSION_SECRET=change-me-session-secret-min-16-chars

# Опционально: токен администратора
ADMIN_TOKEN=

# S3-совместимое хранилище
S3_ENDPOINT=https://s3.example.com
S3_REGION=ru-1
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# Лимит загрузки файлов (в мегабайтах)
MAX_UPLOAD_MB=15

