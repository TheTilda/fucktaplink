---
import BaseLayout from '../../layouts/BaseLayout.astro';
import StatsCards from '../../components/StatsCards.astro';
import MarketplaceButton from '../../components/MarketplaceButton.astro';
import { db } from '../../server/db/client';
import { landings } from '../../server/db/schema';
import { eq } from 'drizzle-orm';

const slug = Astro.params.slug || '';

const landing = await db.query.landings.findFirst({
	where: eq(landings.slug, slug)
});

if (!landing || landing.status !== 'active') {
	return Astro.redirect('/404');
}

// –£–≤–µ–ª–∏—á–∏–≤–∞–µ–º —Å—á–µ—Ç—á–∏–∫ –ø—Ä–æ—Å–º–æ—Ç—Ä–æ–≤
void db
	.update(landings)
	.set({ views: (landing.views || 0) + 1 })
	.where(eq(landings.id, landing.id))
	.catch(() => {});

const rating = parseFloat(landing.rating || '0');
const reviews = landing.reviews || 0;
const purchases = landing.purchases || 0;
const layoutType = landing.layoutType || 'standard';
---

<BaseLayout
	title={landing.title}
	description={landing.description}
	image={landing.imageUrl || undefined}
>
	{layoutType === 'compact' ? (
		<!-- –ö–æ–º–ø–∞–∫—Ç–Ω—ã–π –≤–∞—Ä–∏–∞–Ω—Ç: –≤—Å–µ –Ω–∞ –æ–¥–Ω–æ–º —ç–∫—Ä–∞–Ω–µ –±–µ–∑ –ø—Ä–æ–∫—Ä—É—Ç–∫–∏, –Ω–∞ –≤—Å—é —à–∏—Ä–∏–Ω—É -->
		<div class="flex h-screen w-full flex-col overflow-hidden px-3 py-2 sm:px-4 sm:py-3">
			<header class="mb-1.5 grid grid-cols-[auto_1fr] items-start gap-2 sm:gap-3">
				<div class="flex-shrink-0">
					{landing.imageUrl ? (
						<img
							src={landing.imageUrl}
							alt={landing.title}
							class="h-20 w-20 rounded-lg bg-slate-50 object-contain ring-1 ring-slate-100 sm:h-28 sm:w-28"
						/>
					) : (
						<div class="flex h-20 w-20 items-center justify-center rounded-lg bg-slate-100 text-slate-400 text-xs sm:h-28 sm:w-28">
							–ù–µ—Ç –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è
						</div>
					)}
				</div>
				<div class="min-w-0 space-y-1">
					<h1 class="text-base font-bold leading-tight text-slate-900 sm:text-lg line-clamp-1">
						{landing.title}
					</h1>
					<p class="text-[11px] leading-tight text-slate-600 sm:text-xs line-clamp-1">
						{landing.description}
					</p>
					<div class="flex items-center gap-1.5 text-[10px] sm:text-xs">
						{rating > 0 && (
							<span class="flex items-center gap-0.5 rounded bg-amber-50 px-1.5 py-0.5 text-amber-700">
								<span class="text-xs">‚òÖ</span>
								<span class="font-bold">{rating.toFixed(1)}</span>
								<span class="text-[9px] text-amber-600">–æ—Ü–µ–Ω–∫–∞</span>
							</span>
						)}
						{reviews > 0 && (
							<span class="flex items-center gap-0.5 rounded bg-slate-50 px-1.5 py-0.5 text-slate-700">
								<span class="text-xs">üí¨</span>
								<span class="font-semibold">{reviews.toLocaleString('ru-RU')}</span>
								<span class="text-[9px] text-slate-600">–æ—Ç–∑—ã–≤–æ–≤</span>
							</span>
						)}
						{purchases > 0 && (
							<span class="flex items-center gap-0.5 rounded bg-slate-50 px-1.5 py-0.5 text-slate-700">
								<span class="text-xs">üõí</span>
								<span class="font-semibold">{purchases.toLocaleString('ru-RU')}</span>
								<span class="text-[9px] text-slate-600">–ø–æ–∫—É–ø–æ–∫</span>
							</span>
						)}
					</div>
				</div>
			</header>

			<section class="mt-auto space-y-1">
				<h2 class="text-xs font-semibold text-slate-900 sm:text-sm">–í—ã–±–µ—Ä–∏ –º–∞—Ä–∫–µ—Ç–ø–ª–µ–π—Å</h2>
				<div class="grid grid-cols-1 gap-1.5 sm:grid-cols-3">
					{landing.linkWb && (
						<a
							class="flex w-full items-center justify-between gap-2 rounded-xl px-3 py-2.5 text-sm font-semibold text-white transition duration-150 hover:opacity-90"
							style="background:#A53DFF"
							href={landing.linkWb}
							target="_blank"
							rel="noopener noreferrer"
						>
							<span class="truncate">Wildberries</span>
							<span class="flex-shrink-0 rounded-lg bg-white/15 px-2 py-0.5 text-xs font-medium text-white/90">
								–ü–µ—Ä–µ–π—Ç–∏
							</span>
						</a>
					)}
					{landing.linkOzon && (
						<a
							class="flex w-full items-center justify-between gap-2 rounded-xl px-3 py-2.5 text-sm font-semibold text-white transition duration-150 hover:opacity-90"
							style="background:#3B6CFF"
							href={landing.linkOzon}
							target="_blank"
							rel="noopener noreferrer"
						>
							<span class="truncate">Ozon</span>
							<span class="flex-shrink-0 rounded-lg bg-white/15 px-2 py-0.5 text-xs font-medium text-white/90">
								–ü–µ—Ä–µ–π—Ç–∏
							</span>
						</a>
					)}
					{landing.linkYm && (
						<a
							class="flex w-full items-center justify-between gap-2 rounded-xl px-3 py-2.5 text-sm font-semibold text-white transition duration-150 hover:opacity-90"
							style="background:#F4C542"
							href={landing.linkYm}
							target="_blank"
							rel="noopener noreferrer"
						>
							<span class="truncate">–Ø–Ω–¥–µ–∫—Å –ú–∞—Ä–∫–µ—Ç</span>
							<span class="flex-shrink-0 rounded-lg bg-white/15 px-2 py-0.5 text-xs font-medium text-white/90">
								–ü–µ—Ä–µ–π—Ç–∏
							</span>
						</a>
					)}
				</div>
			</section>

			<footer class="mt-1 text-[9px] leading-tight text-slate-400 sm:text-[10px]">
				–ù–µ —è–≤–ª—è–µ—Ç—Å—è –ø—É–±–ª–∏—á–Ω–æ–π –æ—Ñ–µ—Ä—Ç–æ–π. –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –ø—Ä–µ–¥–æ—Å—Ç–∞–≤–ª–µ–Ω–∞ –ø–∞—Ä—Ç–Ω—ë—Ä–æ–º.
			</footer>
		</div>
	) : (
		<!-- –°—Ç–∞–Ω–¥–∞—Ä—Ç–Ω—ã–π –≤–∞—Ä–∏–∞–Ω—Ç: —Ç–µ–∫—É—â–∞—è –≤–µ—Ä—Å—Ç–∫–∞ -->
		<div class="mx-auto flex min-h-screen max-w-5xl flex-col gap-8 px-4 py-8 sm:px-6 sm:py-12 lg:px-10">
			<header class="grid grid-cols-1 items-start gap-6 sm:grid-cols-[1fr_1.2fr]">
				<div class="flex justify-center">
					{landing.imageUrl ? (
						<img
							src={landing.imageUrl}
							alt={landing.title}
							class="h-auto w-full max-w-[320px] rounded-3xl bg-slate-50 object-contain ring-1 ring-slate-100"
						/>
					) : (
						<div class="flex h-64 w-full max-w-[320px] items-center justify-center rounded-3xl bg-slate-100 text-slate-400">
							–ù–µ—Ç –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏—è
						</div>
					)}
				</div>
				<div class="space-y-4">
