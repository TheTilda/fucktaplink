---
interface Props {
	label: string;
	href: string;
	color: string;
}

const { label, href, color } = Astro.props;
---

<a
	class="flex w-full items-center justify-between gap-3 rounded-2xl px-4 py-4 text-base font-semibold text-white transition duration-150 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2"
	style={`background:${color}`}
	href={href}
	target="_blank"
	rel="noopener noreferrer"
>
	<span class="truncate">{label}</span>
	<span class="rounded-xl bg-white/15 px-3 py-1 text-sm font-medium text-white/90">
		Перейти
	</span>
</a>




